<div class="titlebar">
  <div class='l-menu'>
    <div class='button cancel'>Cancel</div>
  </div>
  <div class='r-menu'>
    <div class='button done'>Done</div>
  </div>
  Editing Person
</div>
<form class="panel">
  <div class="field text-field first-name-field">
    <input id="first_name" name="first_name" type="text" autocorrect="off" autocapitalize="off" placeholder="First name">
    <label for="first_name">First Name</label>
  </div>
  <div class="field text-field last-name-field">
    <input id="last_name" name="last_name" type="text" autocorrect="off" autocapitalize="off" placeholder="Last name">
    <label for="last_name">Last Name</label>
  </div>
  <% if (!person.role.match(/TFP|DD|CHIEF|ADMIN/i)) { %>
  <div class="field select-field role-field">
    <select id="role" name="role">
    <option value="student">Student</option>
    <option value="teacher">Teacher</option>
    <option value="staff">Staff</option>
    <option value="apprentice">Apprentice</option>
    <option value="volunteer">Volunteer</option>
    <option value="parent">Parent</option>
    </select>
    <label for="role">Role</label>
  </div>
  <% } %>
  <div class="field select-field grade-field">
    <select id="grade" name="grade">
      <option value=""></option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
      <option value="11">11</option>
      <option value="12">12</option>
    </select>
    <label for="grade">Grade</label>
  </div>
  <div class="field actions-field">
    <input type="submit" value="Done" />
  </div>
</form>
