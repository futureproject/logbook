<div class="titlebar">
  <div class='l-menu'>
    <div class='button cancel'>Cancel</div>
  </div>
  <div class='r-menu'>
    <div class='button done'>Done</div>
  </div>
  Editing Person
</div>
<form class="panel">
  <div class="field first-name-field">
    <input id="first_name" name="first_name" type="text" autocorrect="off" autocapitalize="off">
    <label for="first_name">First Name</label>
  </div>
  <div class="field last-name-field">
    <input id="last_name" name="last_name" type="text" autocorrect="off" autocapitalize="off">
    <label for="last_name">Last Name</label>
  </div>
  <div class="field role-field">
    <select id="role" name="role">
    <option value="student">student</option>
    <option value="teacher">teacher</option>
    <option value="staff">staff</option>
    <option value="apprentice">apprentice</option>
    <option value="volunteer">volunteer</option>
    <option value="parent">parent</option>
    <option value="alum">alum</option>
    <option value="DD">DD</option>
    <option value="CHIEF">CHIEF</option>
    <option value="TFP">TFP</option>
    </select>
    <label for="role">Role</label>
  </div>
  <div class="field grade-field">
    <select id="grade" name="grade">
      <option value=""></option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
      <option value="11">11</option>
      <option value="12">12</option>
    </select>
    <label for="grade">Grade</label>
  </div>
  <div class="field actions-field">
    <input type="submit" value="Done" />
  </div>
</form>
