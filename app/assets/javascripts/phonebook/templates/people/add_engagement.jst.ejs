<div class="titlebar">
  <div class='l-menu'>
    <div class='button cancel'>Cancel</div>
  </div>
  <div class='r-menu'>
    <div class='button done'>Done</div>
  </div>
  New Engagement
</div>
<form class="panel">
  <header class="panel-header">Engagement w/<%= person.first_name %> <%= person.last_name %></header>
  <div class="field select-field kind-field">
    <select id="kind" name="kind">
      <option value="Coaching Session">Coaching Session</option>
      <option value="Event">Event</option>
      <option value="Course">Course</option>
      <option value="Meeting">Meeting</option>
    </select>
    <label for="kind">Kind</label>
  </div>
  <div class="field date-field">
    <input name='date' type='date'>
    <label for="date">Date</label>
  </div>
  <div class="field number-field duration-field">
    <input type="number" min="0" inputmode="numeric" pattern="[0-9]*" name="duration" id="duration" />
    <!--<input type="range" name="duration" id="duration" min="5" max="120"> -->
    <label for="duration">Duration (Mins)</label>
  </div>
  <div class="field notes-field file-field">
    <input type="file" id="photo" />
    <label for="duration">Note</label>
  </div>
  <div class="field longform-field description-field">
    <textarea name='description' placeholder='Description'></textarea>
    <label for="description">Description</label>
  </div>
  <input type='hidden' name='school_id' />
  <div class="field actions-field">
    <input type="submit" value="Done" />
  </div>
</form>
