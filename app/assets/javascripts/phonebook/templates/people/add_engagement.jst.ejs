<div class="titlebar">
  <div class='l-menu'>
    <div class='button cancel'>Cancel</div>
  </div>
  <div class='r-menu'>
    <div class='button done'>Done</div>
  </div>
  New Engagement
</div>
<form class="panel">
  <div class="field">
    <h2>Engagement w/<%= person.first_name %> <%= person.last_name %></h2>
  </div>
  <div class="field kind-field">
    <select id="kind" name="kind">
      <option value="Coaching Session">Coaching Session</option>
      <option value="Event">Event</option>
      <option value="Course">Course</option>
      <option value="Meeting">Meeting</option>
    </select>
    <label for="kind">Kind</label>
  </div>
  <div class="field date-field">
    <input name='date' type='date'>
    <label for="date">Date</label>
  </div>
  <div class="field duration-field">
    <input type="number" name="duration" id="duration" />
    <label for="duration">Duration (Minutes)</label>
  </div>
  <div class="field description-field">
    <textarea name='description'></textarea>
    <label for="description">Description</label>
  </div>
  <input type='hidden' name='school_id' />
  <div class="field actions-field">
    <input type="submit" value="Done" />
  </div>
</form>
