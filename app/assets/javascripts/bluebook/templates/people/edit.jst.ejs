<div id="people-detail" class="detail detail-with-toolbar">
  <form id="edit-person" name="person">
  <div class='detail-toolbar'>
    <div class='detail-toolbar-title'>Editing <%= first_name %></div>
    <div class='l-menu'>
      <button class='cancel'>Cancel</button>
    </div>
    <div class='r-menu'>
      <button class='done'>Done</button>
    </div>
  </div>
  <div class='detail-content'>
      <div class="field">
        <label for="first_name"> First:</label>
        <input type="text" name="first_name" id="first_name" value="<%= first_name %>" >
      </div>

      <div class="field">
        <label for="last_name"> Last:</label>
        <input type="text" name="last_name" id="last_name" value="<%= last_name %>" >
      </div>

      <div class="field">
        <label for="role"> Role:</label>
        <select name="role" id="role">
          <option value="student" <% if(role == 'student'){ %>selected<% } %>>Student</option>
          <option value="faculty" <% if(role == 'faculty'){ %>selected<% } %>>Faculty</option>
        </select>
      </div>

      <div class="field">
        <label for="grade"> Grade:</label>
        <input type="number" name="grade" id="grade" value="<%= grade || 11 %>" min="9"  max="12">
      </div>

      <div class="field">
        <label for="role"> Core:</label>
        <select name="core" id="core">
          <option value="true" <% if(JSON.parse(core)){ %>selected<% } %>>Yes</option>
          <option value="false" <% if(!JSON.parse(core)){ %>selected<% } %>>No</option>
        </select>
      </div>
  </div>
</form>
</div>
