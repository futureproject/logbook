<div class='panel list-detail'>
  <div class='panel-title'>
    <h1>Showing Person</h1>
    <div class="r-menu">
      <a class='edit' href="#edit">Edit</a>
    </div>
  </div>

  <div class="panel-body scrollable pad">
    <h2><%= first_name %> <%= last_name %></h2>
    <h6><%= grade%>th grade<%= dream_team ? " Dream Team " : " " %><%= role %></h6>
    <textarea id='person_notes' placeholder='Notes'><%= notes %></textarea>
    <div class='person-actions'>
      <nav>
        <h6>Add a new:</h6>
        <button class='show-new-report'>Report</button>
        <!--<button class='show-new-testimonial'>Testimonial</button>-->
        <button class='show-new-one-on-one'>One-on-one</button>
      </nav>
      <form id="new_report" method="post">
        <h6>New Report</h6>
        <textarea id="report_content" name="content" placeholder="50-200 words"></textarea>
        <input type="reset" value="Cancel">
        <input name="commit" type="submit" value="Submit Report">
      </form>
      <form id="new_one_on_one" method="post">
        <h6>One-on-One Description</h6>
        <textarea id="one_on_one_note" name="note" placeholder="(kept private - only you see this)"></textarea>
        <label>Date</label>
        <input name='date' type='date' value='<%= new Date().toString('yyyy-MM-dd') %>' />
        <label for="one_on_one_duration">Duration</label>
        <select id="one_on_one_duration" name="duration">
          <option value="0.25">15 mins</option>
          <option value="0.5">30 mins</option>
          <option value="1">1 hr</option>
          <option value="1.5">1.5 hrs</option>
          <option value="2.0">2 hrs</option>
          <option value="3.0">3 hrs</option>
        </select>
        <input type="reset" value="Cancel">
        <input name="commit" type="submit" value="Log It">
      </form>
    </div>
    <hr>
    <table class='one_on_ones'>
      <colgroup>
        <col>
        <col>
        <col>
      </colgroup>
      <tr>
        <th>Date</th>
        <th>Hours</th>
        <th>Note</th>
      </tr>
    </table>
    <ul class="stats">
      <li class="stat">
      <h1 id='primary_projects_count'>0</h1>
      <span>primary projects</span>
      </li>
      <li class="stat">
      <h1 id='secondary_projects_count'>0</h1>
      <span>secondary projects</span>
      </li>
      <li class="stat">
      <h1 id='workshops_attended_count'>0</h1>
      <span>workshops attended</span>
      </li>
      <li class="stat">
      <h1 id='hours_coached'>0.0</h1>
      <span>hours in one-on-ones</span>
      </li>
    </ul>
  </div><!-- panel-body -->
</div>
