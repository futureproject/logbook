<div class="person-avatar">
  <% if (!!person.avatar_url) { %>
    <img src="<%= person.avatar_url %>" />
  <% } else { %>
    <div class="initials"><%= person.initials %></div>
  <% } %>
  <div class="upload-trigger">
    <label for="avatar-uploader">Replace Photo</label>
    <input id="avatar-uploader" name='file' type='file' />
  </div>
</div>
<div class="person-info">
    <div class="field first-name-field">
      <input id="first_name" name="first_name" required="required" type="text">
      <label for="first_name">First Name</label>
    </div>
    <div class="field last-name-field">
      <input id="last_name" name="last_name" required="required" type="text">
      <label for="last_name">Last Name</label>
    </div>
    <div class="field role-field">
      <select id="role" name="role">
        <option value="Student">Student</option>
        <option value="Teacher">Teacher</option>
        <option value="Staff">Staff</option>
        <option value="Future Corps Leader">Future Corps Leader</option>
        <option value="Volunteer">Volunteer</option>
        <option value="Parent">Parent</option>
        <option value="Alum">Alum</option>
        <option value="DD">DD</option>
        <option value="CHIEF">CHIEF</option>
        <option value="TFP">TFP</option>
      </select>
      <label for="role">Role</label>
    </div>
    <div class="field school-field">
      <select id="school_id" name="school_id">
      </select>
      <label for="school_id">School</label>
    </div>
    <div class="field grade-field">
      <select id="grade" name="grade">
        <option value=""></option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value="11">11</option>
        <option value="12">12</option>
      </select>
      <label for="grade">Grade</label>
    </div>
    <div class="field description-field">
      <input id="description" name="description" type="text">
      <label for="description">Description</label>
    </div>
    <div class="field checkbox-field dream-team-field">
      <input id="dream_team" type='checkbox' name="dream_team" />
      <label for="dream_team">Dream Team</label>
    </div>
    <div class="field checkbox-field future-fellow-field">
      <input id="future_fellow" type='checkbox' name="future_fellow" />
      <label for="future_fellow">Fellow</label>
    </div>
    <div class="more-fields">
      <div class="field email-field">
        <input id="email" name="email" type="text">
        <label for="email">Email</label>
      </div>
      <div class="field facebook-field">
        <input id="facebook_handle" name="facebook_handle" type="text">
        <label for="facebook_handle">Facebook</label>
      </div>
      <div class="field twitter-field">
        <input id="twitter_handle" name="twitter_handle" type="text">
        <label for="twitter_handle">Twitter</label>
      </div>
      <div class="field instagram-field">
        <input id="instagram_handle" name="instagram_handle" type="text">
        <label for="instagram_handle">Instagram</label>
      </div>
      <div class="field phone-field">
        <input id="phone" name="phone" type="text">
        <label for="phone">Cell Phone</label>
      </div>
      <div class="field date-field birthday-field">
        <label for="birthday">Birthday</label>
        <input id="birthday" name="birthday" type="text" placeholder="1989-12-13">
      </div>
      <div class="field checkbox-field ob-media-release-field">
        <input id="ob_media_release" type='checkbox' name="ob_media_release" />
        <label for="ob_media_release">Media Release</label>
      </div>
      <div class="field checkbox-field ob-disclaimer-field">
        <input id="ob_disclaimer" type='checkbox' name="ob_disclaimer" />
        <label for="ob_disclaimer">Disclaimer</label>
      </div>
      <div class="field checkbox-field ob-parental-consent-field">
        <input id="ob_parental_consent" type='checkbox' name="ob_parental_consent" />
        <label for="ob_parental_consent">Parental Consent</label>
      </div>
      <div class="field parent-first-name-field">
        <input id="parent_first_name" name="parent_first_name" required="required" type="text">
        <label for="parent_first_name">Parent First Name</label>
      </div>
      <div class="field parent-last-name-field">
        <input id="parent_last_name" name="parent_last_name" required="required" type="text">
        <label for="parent_last_name">Parent Last Name</label>
      </div>
      <div class="field parent-phone-field">
        <input id="parent_phone" name="parent_phone" type="text">
        <label for="parent_phone">Parent Phone</label>
      </div>
      <div class="field parent-address-field">
        <input id="parent_address" name="parent_address" type="text">
        <label for="parent_address">Parent Address</label>
      </div>
    </div><!-- .more-fields -->
    <div class="toggle-more">Show</div>
</div>
