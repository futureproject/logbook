@import 'variables';
html, body {
  margin: 0;
  padding: 0;
  color: #fff;
  background: #88d5f0;
  font-family: $base-font-family;
  font-size: 12px;
}

body {
  padding: 40px 0;
}

#new-session {
  width: 100%;
  position: relative;
  overflow: hidden;
  img { display: block; margin: 0 auto; }
  .box {
    width: 280px;
    height: 160px;
    background-size: cover;
    background-color: white;
    margin: 20px auto;
    position: relative;
    h3 { display: none; }
    a, button, input {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      -webkit-appearance: none;
      opacity: 0;
      cursor: pointer;
    }
  }
}

.kanya, .andrew {
  position: absolute;
  left: 50%;
  background-size: cover;
  background-position: center center;
}

.kanya {
  width: 270px;
  height: 214px;
  top: 70px;
  margin-left: -410px;
}

.andrew {
  width: 237px;
  height: 214px;
  top: 220px;
  margin-left: 140px;
}

.go-redirects {
  padding: 40px;
  color: $dark-gray;
}

a {
  color: white;
  text-decoration: none;
}

th { text-align: left; }

.redirects {
  list-style: none;
  margin: 0;
  padding: 0;
  line-height: 2;
  overflow: auto;
  li {
    display: block;
    overflow: auto;
    margin-bottom: 12px;
  }
  .redirect-shortcut, .redirect-url, .redirect-actions {
    float: left;
    padding-right: 1%;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .redirect-shortcut {
    width: 25%;
  }
  .redirect-url {
    width: 75%;
  }
}

.logo img {
  width: 160px;
  height: 160px;
}

form {
  font-size: 2em;
  .field { margin-bottom: 20px; }
}

input {
  font-size: 1em;
  border: 3px solid $dark-gray;
  &[type=text] {
    width: 20em;
  }
  &[type=submit] {
    margin-bottom: 40px;
    -webkit-appearance: none;
    background: white;
    border: 3px solid $dark-gray;
    color: $dark-gray;
    border-radius: 6px;
  }
}

a.edit, a.destroy {
  opacity: .5;
}
