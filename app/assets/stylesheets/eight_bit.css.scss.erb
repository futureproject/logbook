@import 'variables';
html, body {
  margin: 0;
  padding: 0;
  color: #fff;
  background: #88d5f0;
  font-family: $base-font-family;
}

body {
  padding: 40px 0;
}

#new-session {
  width: 100%;
  position: relative;
  overflow: hidden;
  img { display: block; margin: 0 auto; }
  .box {
    width: 280px;
    height: 160px;
    background-size: cover;
    background-color: white;
    margin: 20px auto;
    position: relative;
    h3 { display: none; }
    a, button, input {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      -webkit-appearance: none;
      opacity: 0;
      cursor: pointer;
    }
  }
}

.kanya, .andrew {
  position: absolute;
  left: 50%;
  background-size: cover;
  background-position: center center;
}

.kanya {
  width: 270px;
  height: 214px;
  top: 70px;
  margin-left: -410px;
}

.andrew {
  width: 237px;
  height: 214px;
  top: 220px;
  margin-left: 140px;
}
