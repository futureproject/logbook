= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg


  .field
    .label=f.label :first_name
    .input=f.text_field :first_name
  .field
    .label=f.label :last_name
    .input=f.text_field :last_name
  .field
    .label=f.label :grade
    .input=f.number_field :grade, in: 9..12
  .field
    .label=f.label :core
    .input
      %label.label-switch
        =f.check_box :core
        .checkbox
  - if current_user.school
    .field
      .label=f.label :school
      .input
        = current_user.school.name
        =f.hidden_field :school_id, value: current_user.school.id
  .actions
    = f.submit 'Save'
