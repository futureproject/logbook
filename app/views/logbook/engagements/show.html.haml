.engagement-show[@engagement]
  %header
    %h1= @engagement.kind
    =link_to "Edit", edit_logbook_engagement_path(@engagement), class: 'edit button'
  %section.engagement-info
    %h3= @engagement.name
    %pre.engagement-notes= @engagement.notes
.row
  .g9
    %h1= @engagement.kind
  .g3
    %h1
      =link_to "Edit", edit_logbook_engagement_path(@engagement), class: 'edit'
      =link_to "Duplicate", duplicate_logbook_engagement_path(@engagement)
.engagement
  .row
    .g3
      %label Date
      .fact= @engagement.date.try(:strftime, '%D')
    .g3
      %label Name
      .fact= @engagement.name
    .g3
      %label School
      .fact= @engagement.school.try :name
    .g3
      %label Duration
      .fact= "#{@engagement.duration.try(:round, 2)} Hours"
  .row
    .g6
      %label Notes
      %pre= @engagement.notes
    .g6
      %label
        MEDIA
        = link_to " | Gallery â€º", logbook_assets_path(attachable_type: @engagement.class.name, attachable_id: @engagement.id) if @engagement.assets.any?
      = render partial: 'logbook/assets/s3_uploader', locals: { record: @engagement }
      .assets=render @engagement.assets

  %hr
  .row
    %h3= pluralize @engagement.attendees.count, 'Attendee'
  %ul.people= render @engagement.attendees
