- if @person.errors.any?
  #error_explanation
    %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
    %ul
      - @person.errors.full_messages.each do |msg|
        %li= msg
=form_for [:logbook, @person] do |f|
  .row
    .field.g3
      = f.label :first_name
      = f.text_field :first_name
    .field.g3
      = f.label :last_name
      = f.text_field :last_name
    .field.g3
      = f.label :email
      = f.text_field :email
    .field.g3
      = f.label :phone
      = f.text_field :phone
  .row
    .field.g2
      = f.label :role
      =f.select :role, Person::ROLE_ENUM
    .field.g1
      = f.label :grade
      =f.select :grade, Person::GRADE_ENUM
    .field.g3
      = f.label :school_id, 'School'
      =f.select :school_id, current_user.schools.map{|s| [s.name, s.id] }
    .field.g3
      = f.label :sex
      =f.select :sex, Person::SEX_ENUM
    .field.g2
      = f.label :dream_team
      = f.check_box :dream_team
  .row
    .field.g6
      = f.label :about, 'About (students can edit this)'
      = f.text_area :about
    .field.g6
      = f.label :notes, 'Notes (only you see these)'
      = f.text_area :notes
  .row
    .actions
      = f.submit
