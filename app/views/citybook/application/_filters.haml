#filters
  %ul
    %li
      %ul
        - if current_scope.is_a? Site
          %li=link_to "Viewing #{current_scope.name}", url_for(site_id: current_scope.id)
        -else
          %li=link_to "All Sites", url_for(site_id: nil)
        - Site.order(:name).each do |site|
          %li=link_to site.name, url_for(site_id: site.id)
    %li
      %ul
        - if current_scope.is_a? School
          %li=link_to "Viewing #{current_scope.name}", url_for(school_id: current_scope.id)
        -else
          %li=link_to "Choose a school", "#"
        - School.order(:name).each do |school|
          %li=link_to school.name, url_for(school_id: school.id)
