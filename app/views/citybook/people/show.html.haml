.person
  %h1= @person.name
  %hr
  .person-projects.section.g4
    %h3
      Projects
      =link_to "Add", new_project_path
    .person-primary-projects
      - if @person.primary_projects.any?
        %h6 Leading
        = render @person.primary_projects
      -else
        %p None yet
      - if @person.secondary_projects.any?
        %h6 Supporting
        = render @person.secondary_projects
  .person-about.section.g8
    %h3
      About
      =link_to "Edit", edit_citybook_person_path(@person)
    .person-details
      %p.person-school
        %strong School:
        = @person.school.name rescue 'No School'
      %p.person-dream-director
        %strong Dream Director:
        = @person.school.dream_director.name rescue 'None'
      %p.person-grade
        %strong Grade:
        = @person.grade || "?"
    %strong About:
    - if !@person.about.blank?
      :markdown
        #{@person.about}

- if @person == current_user || current_user.works_at_tfp
  .person-reflections.section.g4.clear
    %h3
      Reflections
      =link_to "Add", new_reflection_path
    = render @person.student_reflections
  .person-reports.section.g4
    %h3 DD Reports
    = render @person.reports
  .person-testimonials.section.g4
    %h3 Testimonials
    = render @person.testimonials
