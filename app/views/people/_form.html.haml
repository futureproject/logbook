- if @person.errors.any?
  #error_explanation
    %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
    %ul
      - @person.errors.full_messages.each do |msg|
        %li= msg
.field
  = f.label :first_name
  = f.text_field :first_name
.field
  = f.label :last_name
  = f.text_field :last_name
.field
  = f.label :role
  = f.select :role, Person::ROLE_ENUM
- if current_user.school
  =f.hidden_field :school_id, value: current_user.school_id
- else
  .field
    = f.label :school_id
    = f.select :school_id, School.all.map{|s| [s.name, s.id] }
.field
  = f.label :grade
  = f.select :grade, (9..12)
.field
  = f.label :core do
    = f.check_box :core
    Core
