= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :role
    = f.text_field :role
  .field
    = f.label :school_id
    = f.number_field :school_id
  .field
    = f.label :grade
    = f.number_field :grade
  .field
    = f.label :core
    = f.check_box :core
  .actions
    = f.submit 'Save'
