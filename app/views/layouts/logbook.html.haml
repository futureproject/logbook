!!!
%html{manifest: '/logbook/manifest.appcache'}
  %head
    %title Logbook
    = stylesheet_link_tag    'application', media: 'all'
    %meta{name:"viewport", content: "width=device-width, maximum-scale=1.0, minimum-scale=1.0, initial-scale=1.0"}
    %meta{name:"apple-mobile-web-app-status-bar-style", content:"black-translucent"}
    %meta{name:"apple-mobile-web-app-capable", content:"yes"}
    %link{rel:"apple-touch-icon", href: asset_path('icon-arrow.png')}

    %link{href: asset_path("apple-touch-startup-image-1536x2008.png"), media: "(device-width: 768px) and (device-height: 1024px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 2)", rel: "apple-touch-startup-image"}

    %link{href: asset_path("apple-touch-startup-image-1496x2048.png"), media: "(device-width: 768px) and (device-height: 1024px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 2)", rel: "apple-touch-startup-image"}


    %link{href: asset_path("apple-touch-startup-image-768x1004.png"), media: "(device-width: 768px) and (device-height: 1024px) and (orientation: portrait) and (-webkit-device-pixel-ratio: 1)", rel: "apple-touch-startup-image"}

    %link{href: asset_path("apple-touch-startup-image-748x1024.png"), media: "(device-width: 768px) and (device-height: 1024px) and (orientation: landscape) and (-webkit-device-pixel-ratio: 1)", rel: "apple-touch-startup-image"}
    = csrf_meta_tags
  %body#l_logbook
    #app
      #sidebar
        =image_tag asset_path('tfplogo.svg'), class: 'avatar'
        %ul.tabs
      #canvas
      #flash
        - flash.each do |k, v|
          .flash{class: k}
            .message= v
            .flash_dismiss
              %span.mega-octicon.octicon-x

    = javascript_include_tag 'logbook/logbook'
    :javascript
      dream.initialize(#{JSON.dump( @js_data || {} )})
    = render 'analytics'
