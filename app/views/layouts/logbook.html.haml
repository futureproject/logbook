!!!
%html
  %head
    %title= "Logbook | #{page_title}"
    = stylesheet_link_tag    'logbook/logbook', media: 'all'
    %meta{name:"viewport", content: "width=1024"}
    = csrf_meta_tags
    %link{rel:"apple-touch-icon", href: asset_path('icon-arrow.png')}
    :javascript
      window.ds = window.ds || {}
      ds.CONSTANTS = #{JSON.dump({
          current_user: current_user.as_json(include: :school),
          scope: current_scope.as_json
        })
      }
  %body
    #nav
      %section#app-name
        %h1=link_to "Logbook", logbook_root_url
      %section#scope-toggle
        %header
          Current Scope
        #current-scope-indicator --

      %section#scope-menu
        #sites
          %header Cities
          =link_to "National", "/logbook/set_scope?scope_id=0&scope_type=national"
          %ul#sites-list
        #schools
          %header Schools
          %ul#schools-list
      %section#app-sections
        %header Navigation
        %ul
          %li
            %a{href: logbook_root_url}
              .link-icon.icon-logbook_dashboard
              .link-label Dashboard
          %li
            %a{href: logbook_people_path}
              .link-icon.icon-logbook_people
              .link-label People
          %li
            %a{href: logbook_engagements_path}
              .link-icon.icon-logbook_engagements
              .link-label Engagements
          %li
            %a{href: logbook_projects_path}
              .link-icon.icon-logbook_projects
              .link-label Projects
          %li
            %a{href: "#"}
              .link-icon.icon-content_paste
              .link-label Weekly Reports

      %section#search
        %header Search
        #search-trigger.link-icon.icon-search
        %input#search-input{type: 'text', name: 'q'}

      #global-add-trigger.icon-add_circle_outline
      #user

    #yield= yield
    #time-filter
      %select#time-filter-menu
        %option{value: ''} this school year
      #time-filter-trigger.icon-event

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-35246062-6', 'auto');
      ga('send', 'pageview');

    = javascript_include_tag 'logbook/logbook'
