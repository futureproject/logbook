!!!
%html
  %head
    %title= "Logbook | #{page_title}"
    = stylesheet_link_tag    'logbook/logbook', media: 'all'
    %meta{name:"viewport", content: "width=1024"}
    = csrf_meta_tags
    %link{rel:"apple-touch-icon", href: asset_path('icon-arrow.png')}
    :javascript
      window.ds = window.ds || {}
      ds.CONSTANTS = #{JSON.dump({
          current_user: current_user.as_json(include: :school),
          scope: current_scope.as_json,
          sites: National.scopes.as_json,
          schools: current_scope.schools.order(:name).as_json
        })
      }
  %body
    #nav
      %section#app-name
        %h1 Logbook
      %section#scope-toggle
        %header
          Current Scope
          %span.icon.icon-arrow-drop-down
        #current-scope-indicator --


      %section#scope-menu
        #sites
          %header Cities
          %ul#sites-list
        #schools
          %header Schools
          %ul#schools-list
      %section#app-sections
        %header Navigation
        %ul.tabs
          = nav_link_to "Dashboard", logbook_root_url, 'ds_dashboard'
          = nav_link_to "People", logbook_people_path, 'ds_people'
          = nav_link_to "Engagements", logbook_engagements_path, 'ds_engagements'
          = nav_link_to "Projects", logbook_projects_path, 'ds_projects'

      #user

    #yield= yield


    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-35246062-6', 'auto');
      ga('send', 'pageview');

    = javascript_include_tag 'logbook/logbook'
