!!!
%html
  %head
    %title Citybook
    = stylesheet_link_tag    'citybook/citybook.css', media: 'all'
    %meta{name:"viewport", content: "width=1024"}
    = csrf_meta_tags
  %body#l_citybook
    = render 'filters'
    = render 'tabs'
    = yield
    .navbar.navbar-horizontal
      .logo= link_to image_tag(asset_path('tfplogo.svg')), root_url
      -if current_user
        .current-user
          = "Logged in as #{current_user.name} | "
          = link_to "Log Out", log_out_path
    = javascript_include_tag 'citybook/citybook.js'
